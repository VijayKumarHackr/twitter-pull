{
  "name": "Twitter Pull",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Pull your last Twitter tweet",
  "homepage_url": "http://nvijaykumar.me",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "64": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "browser_action": {
    "default_icon": "icons/icon.png",
    "default_title": "Pull your last tweet",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "js/lib/jquery.min.js",
      "js/lib/oAuth.js",
      "js/lib/sha1.js",
      "js/lib/twitter.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "storage",
    "https://api.twitter.com/*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "content_scripts": [{
    "matches": ["http://nvijaykumar.me/twitter-pull"],
    "js": ["js/session.js"]
  }]
}
